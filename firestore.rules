rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ユーザー情報: 本人のみ読み書き可
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // コレクション (獲得履歴): 本人のみ読み書き可 (サブコレクション)
      match /collections/{collectionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // product_cache: 誰でも読み取り可、作成は認証ユーザーのみ (更新・削除不可)
    match /product_cache/{janCode} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Reports: 作成のみ可 (Admin SDKで読むため) (サーバーサイド) から行うため、クライアントからはアクセス拒否
    // 将来的に管理画面アプリを作る場合はカスタムクレーム (request.auth.token.admin == true) 等を検討
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
    
    // 商品情報: 誰でも閲覧可, 認証済みなら作成可
    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null;
      // 更新: 認証済み かつ (自分が作成者 または 既存データで作成者がnull)
      allow update: if request.auth != null && (resource.data.creatorId == request.auth.uid || resource.data.creatorId == null);
      allow delete: if false; // 削除は管理者のみ (将来的)
    }
    
    // 攻略法: 一時的に全て許可（デバッグ用）
    match /strategies/{strategyId} {
      allow read, write: if true;
    }

    // 投稿: 誰でも閲覧可, 認証済みなら作成可, 投稿者のみ編集・削除可
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      // 更新・削除: 投稿者本人のみ許可
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 用語集: 誰でも閲覧可, 書き込みは一時的に許可（データ投入用）
    match /terms/{termId} {
      allow read: if true;
      allow write: if true; // TODO: 本番環境では false に戻す
    }
  }
}
