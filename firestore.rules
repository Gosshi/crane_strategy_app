rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ユーザー情報: 本人のみ読み書き可
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // コレクション (獲得履歴): 本人のみ読み書き可 (サブコレクション)
      match /collections/{collectionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // product_cache: 誰でも読み取り可、作成は認証ユーザーのみ (更新・削除不可)
    match /product_cache/{janCode} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Reports: 作成のみ可 (Admin SDKで読むため) (サーバーサイド) から行うため、クライアントからはアクセス拒否
    // 将来的に管理画面アプリを作る場合はカスタムクレーム (request.auth.token.admin == true) 等を検討
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
    
    // 商品情報: 誰でも閲覧可, 認証済みなら作成可
    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false; // 将来的には権限追加
    }
    
    // 攻略法: 誰でも閲覧可, 書き込み不可
    match /strategies/{strategyId} {
      allow read: if true;
      allow write: if false;
    }

    // 投稿: 誰でも閲覧可, 認証済みなら作成可 (自分の投稿の削除などは要件次第だが一旦作成のみ許可)
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
  }
}
